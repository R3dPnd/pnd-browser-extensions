{
  "manifest_version": 3,
  "name": "My Browser Extension",
  "version": "1.0.0",
  "description": "A modern Chromium browser extension",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "My Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/rd_pnd_2025_rd_128.png"
  }
} 